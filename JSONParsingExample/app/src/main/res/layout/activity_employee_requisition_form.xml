<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".EmployeeRequisitionFormActivity">

<TextView
    android:id="@+id/EmployeeRequisitionFormTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Requisition Form"
    android:textAlignment="center"
    android:textSize="24sp"
    android:textStyle="bold" />

<Button
    android:id="@+id/EmployeeRequisitionFormSubmitBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Save" />

<LinearLayout
    android:id="@+id/EmployeeRequisitionFormHeaders"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">

    <TextView
        android:id="@+id/EmployeeRequisitionFormItemNameHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Item"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/EmployeeRequisitionFormRequestedQtyHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Qty"
        android:textAlignment="center"
        android:textStyle="bold" />

</LinearLayout>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/EmployeeRequisitionFormRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical" />

</LinearLayout>